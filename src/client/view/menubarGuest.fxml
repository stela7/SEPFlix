<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<MenuBar prefHeight="20.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.MenuController">
    <menus>
        <Menu fx:id="home" mnemonicParsing="false" text="Home">
            <items>
                <MenuItem fx:id="homescreen" mnemonicParsing="false" onAction="#changeViewMenu" text="Home Screen"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Movies">
            <items>
                <MenuItem fx:id="list" mnemonicParsing="false" onAction="#changeViewMenu" text="My List"/>
                <MenuItem fx:id="trailer" mnemonicParsing="false" onAction="#changeViewMenu" text="Movie Trailer"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Profile">
            <items>
                <MenuItem fx:id="logIn" mnemonicParsing="false" onAction="#changeViewMenu" text="Log In"/>
                <MenuItem fx:id="register" mnemonicParsing="false" onAction="#changeViewMenu" text="Register"/>
            </items>
        </Menu>
    </menus>
</MenuBar>
